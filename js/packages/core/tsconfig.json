{
  "compilerOptions": {
    "module": "ES2015",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "target": "ES2020",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "Node"
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}